import tkinter as tk
a = tk.Tk()
lbl=tk.Label(a,text="Hello, Tkinter!",
             font=("Arial", 16, "italic"),
             bg="lightblue", fg="darkblue",
             padx=10, pady=10,
             relief=tk.RIDGE,
             borderwidth=5,
             anchor=tk.CENTER,
             wraplength=150)
lbl.grid(row=0,column=0)
a.mainloop()