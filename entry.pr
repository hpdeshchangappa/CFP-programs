import tkinter as tk
a=tk.Tk()
a.geometry("300x300")
a.config(bg="lightgreen")

l=tk.Label(a,text="Form",anchor=tk.CENTER)
l.grid(column=1)

l1=tk.Label(a,text="Name : ")
l1.grid(row=1,column=0)

e1=tk.Entry(width=40)
e1.grid(row=1,column=1)

e1.insert(0,"")
def myclick():
    message1="Name : "+e1.get()
    l2=tk.Label(a,text=message1)
    l2.grid(row=3,column=1)
    
b1=tk.Button(a,text="Submit",command=myclick)
b1.grid(row=2,column=1)
a.mainloop()