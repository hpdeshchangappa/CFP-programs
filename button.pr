import tkinter as tk
def on_click():
    print("button clicked")
a=tk.Tk()
btn=tk.Button(a,text="Click Me!",
              font=("Arial",12,"italic"),
              command=on_click,
              relief="raised",
              bd=3,
              bg="lightblue",
              fg="black",
              activebackground="green",
              activeforeground="white",
              padx=10,pady=10,
              height=2,width=10,
              state="normal")
btn.pack()
a.mainloop()

