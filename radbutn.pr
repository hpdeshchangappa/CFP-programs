import tkinter as tk
a=tk.Tk()
a.geometry("300x300")

var=tk.StringVar(value="python")

languages=[("pyhton","pyhton"),
           ("c++","c++"),
           ("java","java"),
           ("javascript","javascript")]
           
for text,value in languages:
    tk.Radiobutton(a,text=text,
                   variable=var,
                   value=value,
                   selectcolor="wheat").pack(anchor="w")

a.mainloop()
                   
    